%nav
  .container-fluid
    .navbar-header
      = button_to "LW Studio", root_path, class: "navbar-toggle", data: {target: "#mainNav", toggle: "collapse"}, type: "button", method: :get
    %ul.nav.navbar-nav.navbar-right
      %li.col-sm-12
        = form_tag do
          .input-group
            = text_field_tag :search_query, nil, class: "form-control", type: "text", placeholder: "Search for..."
            %span.input-group-btn
              = button_tag class: "btn btn-default" do
                %span.glyphicon.glyphicon-search
