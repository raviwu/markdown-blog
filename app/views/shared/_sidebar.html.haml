/ Sidebar
#sidebar-wrapper
  %ul.sidebar-nav
    %li.sidebar-brand
      = link_to "LW Studio", root_path, class: "sidebar-brand"
    %li.nav-bar-item
      = link_to "Blog", posts_path
    %li.nav-bar-item
      = link_to "eBooks", ebooks_path
    - menu_pages.each do |page|
      %li.nav-bar-item
        = link_to page_path(page) do
          - if page.is_draft
            = fa_icon("lock")
            = spaced_divider
          = page.title
    %li
      = mail_to Settings.site_owner.email, class: "nav-bar-icon" do
        = fa_icon "envelope"
      = link_to Settings.site_owner.github_profile, class: "nav-bar-icon" do
        = fa_icon "github"
      = link_to Settings.site_owner.linkedin_profile, class: "nav-bar-icon" do
        = fa_icon "linkedin"
    - if current_user.present?
      %li
        = link_to new_page_path do
          = fa_icon "plus"
          = spaced_divider
          = "New Page"
      %li
        = link_to logout_path, method: :delete do
          = fa_icon "sign-out"
          = spaced_divider
          = "Logout"
